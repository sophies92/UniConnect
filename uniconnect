#!/bin/bash

#------------------------------------------------------------------------------------------------------------
# Mount Aber Uni Storage Drives using sshfs
# Author: Sophie Short
# Date last modified: 2024.01.21
# Version: 0.1.1
#------------------------------------------------------------------------------------------------------------


echo "Enter drive to connect to:"
echo "Available drives:"
echo "- impacs : P-drive"
echo "- aber   : M-drive"

read istr
istrcaps=${istr^^}

if [ ! -d $HOME"/"$istrcaps ]; 
then
    mkdir $HOME"/"$istrcaps
fi

echo "Enter user:"
read userstr
sshfs $userstr@shellsrv.dcs.aber.ac.uk:/$istr/$userstr/ ~/$istrcaps
